@inject NavigationManager navigationManager

    <RadzenCard @onclick="CardClicked">
        <b><RadzenLink Text="@Place.Name" Path="@(Url)"></RadzenLink></b>
        <RadzenLabel Text="Phone:"></RadzenLabel>
        <b>@Place.Phone</b>
        <RadzenLabel Text="Cuisines:"></RadzenLabel>
        <b>
            @foreach (var c in Place.CuisineList)
            {
                <span>@c.Name</span>
            }
        </b>
        <RadzenLabel Text="Ordering & Delivery Services:"></RadzenLabel>
        <b>
            @foreach (var c in Place.OrderingServiceList)
            {
                <span>@c.Name</span>
            }
        </b>
        <RadzenLabel Text="Address:"></RadzenLabel>
        <b>@Place.Address</b>
    </RadzenCard>

@code {

    [Parameter]
    public Place Place { get; set; }

    private string Url => $"restaurant/{Place.Id}";

    public void CardClicked(EventArgs e)
    {
        navigationManager.NavigateTo(Url);
    }

}
